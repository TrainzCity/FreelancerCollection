<Window x:Class="FlLauncher.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlLauncher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid x:Name="Dg_Mods" Grid.Row="1" AutoGenerateColumns="False" SelectionChanged="Dg_Mods_SelectionChanged" PreviewMouseDoubleClick="Dg_Mods_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="Tbl_Mod" Text="Доступные моды:" FontSize="24" FontFamily="Comic Sans MS" HorizontalAlignment="Center"></TextBlock>
        <Button x:Name="Btn_Back" Grid.Row="2" Content="Назад" FontSize="24" FontFamily="Comic Sans MS" HorizontalAlignment="Right" Margin="5" Click="Btn_Back_Click"></Button>
    </Grid>
</Window>
